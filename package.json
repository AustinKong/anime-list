{
    "name": "anime-list",
    "version": "1.0.0",
    "description": "",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=icons/mac/icon.icns --prune=true --out=release-builds",
        "package-win": "electron-packager . MyAnimanga --overwrite --asar=true --platform=win32 --arch=ia32 --icon=icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=\"AustinKong\" --version-string.FileDescription=\"List app for keeping track of anime and manga\" --version-string.ProductName=\"My Animanga\"",
        "package-linux": "electron-packager . MyAnimanga --overwrite --asar=true --platform=linux --arch=x64 --icon=icons/png/1024x1024.png --prune=true --out=release-builds"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AustinKong/Anime-list.git"
    },
    "author": "Austin Kong",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/AustinKong/Anime-list/issues"
    },
    "homepage": "https://github.com/AustinKong/Anime-list#readme",
    "dependencies": {
        "bootstrap": "^3.4.1",
        "electron-packager": "^13.1.1"
    },
    "devDependencies": {
        "electron": "^20.0.3"
    }
}
